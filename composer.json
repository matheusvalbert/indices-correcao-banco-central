{
    "name": "valbert/indices-correcao-banco-central",
    "description": "Consulta os índices de correção do Banco Central via API",
    "keywords": [
        "Valbert",
        "indices-correcao-banco-central"
    ],
    "homepage": "https://github.com/valbert/indices-correcao-banco-central",
    "license": "MIT",
    "authors": [
        {
            "name": "Matheus Valbert",
            "email": "matheusvalbert@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Valbert\\IndicesCorrecao\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Valbert\\IndicesCorrecao\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
